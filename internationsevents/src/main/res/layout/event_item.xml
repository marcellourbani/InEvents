<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Group"
        android:id="@+id/eigroup"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/eidate"
        android:layout_toStartOf="@+id/eidate"
        android:textSize="10sp" />

    <TextView android:id="@+id/eititle"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_toLeftOf="@+id/eidate"
        android:layout_below="@+id/eigroup" />
    <ImageView
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:id="@+id/eiicon"
        android:layout_below="@+id/eititle"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true" />
    <ImageView
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:id="@+id/einew"
        android:layout_below="@+id/eititle"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:src="@drawable/newribbon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="DATE      "
        android:id="@+id/eidate"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TIME      "
        android:id="@+id/eitime"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_below="@+id/eidate"
        android:layout_alignParentRight="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="RSVP"
        android:id="@+id/eirsvp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/eitime"
        android:layout_alignParentRight="true" />
    <TextView android:id="@+id/eilocation"
        android:textSize="12sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:layout_below="@+id/eiicon"
        android:drawableRight="@drawable/ic_menu_directions" />


</RelativeLayout>